@import "../../assets/css/mixins.styl"
.shopCar-wrap
  height 667px
  width 100%
  header
    width 100%
    height 44px
    background #fff
    position fixed
    top 0
    left 0
    z-index 200
    div
      width 100%
      height 100%
      text-align center
      line-height 44px
      .title
        font-size 20px
        color #333
    .right-title
      position absolute
      top 50%
      right 3%
      transform translate(-50%,-50%)
      color red
      float right

  .container
    width 100%
    height 100%
    padding-top 50px
    box-sizing border-box
    background #f4f4f4
    position relative
    .text
      display flex
      width 100%
      p
        flex 1
        font-size 12px
        color #666
        padding-left 10px
        .iconfont
          transform scale(0.5)



    .car
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      .iconfont
        font-size 120px
        color #bbb
    .content
      position absolute
      top 60%
      left 50%
      transform translate(-50%,-50%)
    .loginIn
      position absolute
      top 70%
      left 50%
      transform translate(-50%,-50%)
      width 100%
      .but
        background #b4282d
        color #f5f5f5
        margin-left 10%
        width 80%